<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="18dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
       >

        <ImageView
            android:id="@+id/img_item_mylv"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name_mylvitem"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="大众"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_num_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="1234244444444444"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:id="@+id/line_mylvitem"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_name_mylvitem"
                android:layout_centerVertical="true"
                android:background="#ff0000"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_company_mylvitem"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_mylvitem"
                android:layout_marginTop="5dp"
                android:text="中古测试cescescecssddddddddddddddddddddddc"
                android:textColor="#000"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_num2_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line_mylvitem"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="津MRW434"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/btn_xiajia"
                android:layout_below="@id/tv_num2_mylvitem"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                android:layout_height="35dp"
                android:background="@drawable/denglu_bg"
                android:text="下架"
                android:textColor="#fff"
                android:layout_gravity="right"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F8F8FF"
        android:layout_below="@id/img_item_mylv"
        android:layout_marginRight="10dp"/>
</LinearLayout>
